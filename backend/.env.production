# Database Configuration - You'll replace this with your Neon connection string
DATABASE_URL=postgres://username:password@ep-some-id.region.aws.neon.tech/dbname

# JWT Configuration
JWT_SECRET=expense_tracker_secure_secret_key_for_production
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=10000
NODE_ENV=production

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes 

# Frontend URL (for email links) - Update when you have your Netlify URL
FRONTEND_URL=https://your-expense-tracker.netlify.app

# SMTP Configuration - Optional for development
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password 